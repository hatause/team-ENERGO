<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Консольный вывод -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>

        <!-- Файл для всех логов (ротация по дню и размеру) -->
        <RollingFile name="AppFile"
                     fileName="${LOG_DIR}/schedule-server.log"
                     filePattern="${LOG_DIR}/schedule-server-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="50MB" />
            </Policies>
            <DefaultRolloverStrategy max="30" />
        </RollingFile>

        <!-- Отдельный файл для TCP-соединений с C++ -->
        <RollingFile name="TcpFile"
                     fileName="${LOG_DIR}/tcp-cpp.log"
                     filePattern="${LOG_DIR}/tcp-cpp-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="20MB" />
            </Policies>
            <DefaultRolloverStrategy max="14" />
        </RollingFile>

        <!-- Отдельный файл для ошибок -->
        <RollingFile name="ErrorFile"
                     fileName="${LOG_DIR}/error.log"
                     filePattern="${LOG_DIR}/error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="20MB" />
            </Policies>
            <DefaultRolloverStrategy max="30" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Логгер для приложения -->
        <Logger name="com.schedule.server" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Logger>

        <!-- Логгер для kvt пакета -->
        <Logger name="kvt" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Logger>

        <!-- Логгер для TCP-соединения с C++ сервером -->
        <Logger name="com.schedule.server.tcp" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="TcpFile" />
            <AppenderRef ref="ErrorFile" />
        </Logger>

        <!-- Spring Framework -->
        <Logger name="org.springframework" level="INFO" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AppFile" />
        </Logger>

        <!-- Hibernate SQL -->
        <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AppFile" />
        </Logger>

        <!-- Root -->
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Root>
    </Loggers>

</Configuration>
